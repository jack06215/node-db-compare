generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Company {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  tid          String   @unique
  company_name String
  subscription String?
  json_field   Json?
  revoke       Boolean  @default(false)
  created_at   DateTime @default(now())

  @@map("companies")
}
